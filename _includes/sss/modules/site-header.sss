.site-header
    @mixin contentBox
    padding-top: 1.5em

    &__title
        font-size: 3em
        margin-bottom: 0.7em
        line-height: 1.2

    &__title-link:not(.is-root)
        @mixin link $linkColor, $linkColor
        text-decoration-thickness: 0.05em

    &__lang-switcher
        float: right
        padding: 0.5em 0 0 1em
