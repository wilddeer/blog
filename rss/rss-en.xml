---
layout: none
lang: en
permalink: /en/rss.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
	<channel>
		<title>{{ site.loc.name[page.lang] | xml_escape }}</title>
		<description>{{ site.loc.desc[page.lang] | xml_escape }}</description>
		<link>{{ site.url }}{{ site.path[page.lang] }}</link>
		<atom:link href="{{ site.url }}{{ site.path[page.lang] }}rss.xml" rel="self" type="application/rss+xml" />
		{% for post in site.posts %}
			{% if post.lang == page.lang %}
			<item>
				<title>{{ post.title | xml_escape }}</title>
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>{{ site.url }}{{ post.url }}</link>
				<guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
			</item>
			{% endif %}
		{% endfor %}
	</channel>
</rss>
